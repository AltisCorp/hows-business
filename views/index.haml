- content_for :javascripts do
  = include_javascript :highcharts
  = include_javascript :chart_helper
  = include_javascript :fusion_tables
  
  :javascript
    $(function () {
      FusionTables.getChart("Grouping = 'Business Licenses' AND Type IN ('Trend', 'Raw')");
      FusionTables.getChart("Grouping = 'Building Permits' AND Type IN ('Trend', 'Raw')");
      FusionTables.getChart("Grouping = 'Unemployment' AND Type IN ('Trend', 'Raw')");
      FusionTables.getChart("Name = 'Foreclosure Quarterly'");
    });

.row-fluid
  .span6.well
    %h3 
      New Business Licenses
      %small Chicago
    %p
      Source: 
      %a{:href => "https://data.cityofchicago.org/Community-Economic-Development/Business-Licenses/r5kz-chrr"} City of Chicago
      |
      Trend: 
      %span.label.label-warning
        It's been better!

        
    #chart_Business-Licenses.chart
  .span6.well
    %h3 
      Unemployment
      %small
        Cook County
    %p
      Source: 
      %a{:href => "http://research.stlouisfed.org/fred2/series/ILCOOK1URN"} Federal Reserve Economic Data 
      |
      Trend: 
      %span.label.label-success
        It's booming!
    #chart_Unemployment.chart

