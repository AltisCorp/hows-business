- content_for :javascripts do
  = include_javascript :highcharts
  = include_javascript :chart_helper
  = include_javascript :fusion_tables
  
  :javascript
    $(function () {
      FusionTables.getChart("Grouping = 'Business Licenses' AND Type IN ('Trend', 'Raw')");
      FusionTables.getChart("Grouping = 'Building Permits' AND Type IN ('Trend', 'Raw')");
      FusionTables.getChart("Grouping = 'Unemployment' AND 'Source' = 'IDES' AND Type IN ('Trend', 'Raw')");
      FusionTables.getChart("Name = 'Foreclosure Quarterly'");
    });

.row-fluid
  .span6.well
    %h3 
      New Business Licenses
    %p
      Source: 
      %a{:href => "https://data.cityofchicago.org/Community-Economic-Development/Business-Licenses/r5kz-chrr"} City of Chicago
      |
      Trend: 
      %span.label.label-warning
        Slowly declining
        %i.icon-arrow-down.icon-white
        
    #chart_Business-Licenses.chart
  .span6.well
    %h3 
      Unemployment
    %p
      Source: 
      %a{:href => "http://www.bls.gov/lau/"} Bureau of Labor Statistics
      |
      Trend: 
      %span.label.label-success
        Declining
        %i.icon-arrow-down.icon-white
    #chart_Unemployment.chart

.row-fluid
  .span6.well
    %h3 
      Building Permits
    %p 
      Source:
      %a{:href => "https://data.cityofchicago.org/Buildings/Building-Permits/ydr8-5enu"} City of Chicago
      |
      Trend: 
      %span.label.label-warning
        Slowly declining
        %i.icon-arrow-down.icon-white
    #chart_Building-Permits.chart
  .span6.well
    %h3 
      Housing Foreclosures
        
    %p 
      Source:
      %a{:href => "http://www.woodstockinst.org/"} Woodstock Institute
      |
      Trend: 
      %span.label.label-important
        Rising
        %i.icon-arrow-up.icon-white
    #chart_Foreclosures.chart

.row-fluid
  .span12
    %h3
      About this project
    %p
      %p 
        How’s Business provides a view of Chicago’s local economy. It uses open data to show how several economic indicators have been trending since 2005. 
